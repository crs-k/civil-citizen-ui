{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro claimAmount(claimAmountModel, index, form, t) %}
  <div class="row-container">
    <div class="multiple-row">
      <div class="govuk-grid-column-one-half govuk-!-display-inline govuk-!-padding-left-0">
        {{ govukInput({
          id: "claimAmountRows["+index+"][reason]",
          name: "claimAmountRows["+index+"][reason]",
          value: claimAmountModel.reason,
          classes: "govuk-grid-column-full",
          spellcheck: false,
          label: {
            text: t('PAGES.CLAIM_AMOUNT_BREAKDOWN.REASON'),
            classes: 'govuk-visually-hidden'
          },
          errorMessage: {
            text: t(form.errorFor("claimAmountRows["+index+"][reason]"))
          } if form.hasFieldError( "claimAmountRows["+index+"][reason]")
        }) }}
      </div>
      <div class="govuk-grid-column-one-half govuk-!-display-inline govuk-!-padding-left-0">
        {{ govukInput({
          id: "claimAmountRows["+index+"][amount]",
          name: "claimAmountRows["+index+"][amount]",
          value: claimAmountModel.amount,
          prefix: {
            text: "Â£"
          },
          classes: "govuk-grid-column-full",
          spellcheck: false,
          label: {
            text: t('PAGES.DEFENDANT_TIMELINE.WHAT_HAPPENED'),
            classes: 'govuk-visually-hidden'
          },
          errorMessage: {
            text: t(form.errorFor("claimAmountRows["+index+"][amount]"))
          } if form.hasFieldError( "claimAmountRows["+index+"][amount]")
        }) }}
      </div>
    </div>
  </div>
{% endmacro %}
