{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% macro errorSummary(errors, t, formatValues, descriptionHtml, titleText) %}
{% if errors %}
{{ govukErrorSummary({
    titleText: titleText ? t(titleText) : t('ERRORS.THERE_WAS_A_PROBLEM'),
    errorList: translateErrors(errors, t, formatValues),
    descriptionHtml: descriptionHtml
    }) }}
{% endif %}
{% endmacro %}
