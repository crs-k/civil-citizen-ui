{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput -%}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset -%}
{% from "govuk/components/input/macro.njk" import govukInput -%}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/yesNoForm.njk" import yesNoRadioButton %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "../../macro/report-detail.njk" import reportDetail %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.EXPERT_REPORT_DETAILS.PAGE_TITLE') }}
{% endblock %}

{% set errors = form.getAllErrors() %}
{% set atLeastOneCourtOrderError = form.errorFor('reportDetails') %}

            {% set yesHtml %}
              {{ govukTextarea({
                name: "vulnerabilityDetails",
                id: "vulnerabilityDetails",
                value: form.model.vulnerabilityDetails,
                label: {
                  text: t('PAGES.VULNERABILITY.QUESTION_2')
                },
                errorMessage: {
                  html: form.errorFor("vulnerabilityDetails")
                } if form.hasFieldError("vulnerabilityDetails")
              }) }}
            {% endset %}

 {% set reportDetailsHtml %}
                <div
                  class="govuk-form-group {% if atLeastOneCourtOrderError %} govuk-form-group--error {% endif %}">
                  {% if atLeastOneCourtOrderError %}
                    <p class="govuk-error-message">
                      <span class="govuk-visually-hidden">{{ t('ERRORS.ERROR') }} :</span> {{ t(atLeastOneCourtOrderError) }}
                    </p>
                  {% endif %}

                  {% for row in form.model.reportDetails %}
                    {{ reportDetail(loop.index0, row, form.errorFor, t) }}
                  {% endfor %}

                  <div class="moj-button-action">
                    {{ govukButton({
                      text: t('PAGES.EXPERT_REPORT_DETAILS.ADD_ANOTHER'),
                      classes: 'govuk-button--secondary moj-add-another__add-button govuk-!-margin-bottom-1',
                      type: 'button',
                      attributes: {
                        'id': 'add-another-expert-report'
                      }
                    }) }}
                  </div>
                </div>

{% endset -%}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        <div class="govuk-grid-row">
          {{ errorSummary(form.getAllErrors(), t) }}
        </div>
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.EXPERT_REPORT_DETAILS.TITLE') }}</h1>
          <form method="post" novalidate autocomplete="off">
            {{ csrfProtection(csrf) }}
            {{ yesNoRadioButton(t, 'hasExportReports', 'hasExportReports', '', form, '', {yesHtml: reportDetailsHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}
